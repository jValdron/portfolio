.row
  .space-4

  .col-sm-10.col-sm-offset-1
    h2 {{'projects.name' | t}}

    div(ng-bind-html='\'projects.content\' | t')

    img.loader(src=config.url.cdn + 'img/loader.png' ng-if='!projects')

    .space-2

    ul#projects
      li(ng-repeat='project in projects')
        img.boxed.pull-left(ng-src=config.url.cdn + 'img/projects/{{project.id}}.jpg' width='120' height='120')
        .info
          h4
            | {{project.title}}
            span(ng-if='project.employer')  {{'projects.at' | t:{ 'employer': project.employer } }}
          .description {{project.description}}
        .clear

    .space-8
    a.next(href='#/experiences')
      img(src=config.url.cdn + 'img/chevron-right.png')
      | {{'experiences.name' | t}}

  .clear