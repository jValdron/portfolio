doctype html
html(lang='en' ng-app='valdronApp')
  head
    title Valdron.ca

    base(href='/')

    link(rel='stylesheet' href=config.url.cdn + 'css/valdron.css?v=' + version)
    link(rel='stylesheet' href=config.url.cdn + 'css/printable.css?v=' + version media='print')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lobster:400')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto+Condensed:300,700')

    link(rel='shortcut icon' type='image/x-icon' href=config.url.cdn + 'img/favicon.ico?v=' + version)
    link(rel='shortcut icon' type='image/png' href=config.url.cdn + 'img/favicon.png?v=' + version)

    meta(name='viewport' content='width=device-width, initial-scale=1')

  body(ng-class='currentPage')

    header.navbar.navbar-fixed-top(role='navigation')
      .navbar-header
        button.navbar-toggle.collapsed.btn(type='button' data-toggle='collapse' data-target='.navbar-collapse')
          .sr-only Toggle navigation
          .icon-bar
          .icon-bar
          .icon-bar

        h1
          a(href='#') Valdron.ca

      nav.collapse.navbar-collapse
        ul.nav.navbar-nav

          li: a(href='#/intro' ng-class='{ active: currentPage === \'intro\' }') {{'intro.name' | t}}

          li: a(href='#/resume' ng-class='{ active: currentPage === \'resume\' }') {{'resume.name' | t}}

          li.dropdown
            a.dropdown-toggle(href='#' ng-class='{ active: currentPage === \'about-me\' || currentPage === \'about-portfolio\' }' data-toggle='dropdown' ng-click='$event.preventDefault();')
              | {{'about' | t}} 
              span.caret
            ul.dropdown-menu(role='menu')
              li: a(href='#/about/me') {{'contact.name' | t}}
              li: a(href='#/about/portfolio') {{'about-portfolio.name' | t}}

          li: a(href='#/projects' ng-class='{ active: currentPage === \'projects\' }') {{'projects.name' | t}}

          li: a(href='#/experiences' ng-class='{ active: currentPage === \'experiences\' }') {{'experiences.name' | t}}

          li
            a.btn(href='https://www.github.com/jValdron/portfolio' rel='external')
              img(src=config.url.cdn + 'img/github.png?v=' + version)
              |  GitHub

    #bg
    #fade
    #view.container(ng-view)

    script(type='text/javascript' src=config.url.cdn + 'js/vendors.js?v=' + version)
    script(type='text/javascript' src=config.url.cdn + 'js/valdron.js?v=' + version)

    script(type='text/javascript').
      var cdn = '#{config.url.cdn}', version = '#{version}';

    script(type='text/javascript').
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-30998710-1', 'valdron.ca');
      ga('require', 'displayfeatures');
      ga('send', 'pageview');